@model TaskApplication.Models.Category

@{
    ViewBag.Title = "Delete category";
}

<h2>@ViewBag.Title</h2>

<h3>Are you sure you want to delete this?</h3>
<fieldset>
    <legend>Category</legend>

    <div class="display-label">
        <span>@Html.DisplayNameFor(model => model.CategoryName): </span>@Html.DisplayFor(model => model.CategoryName)
    </div>

    <div class="display-label">
        <span>@Html.DisplayNameFor(model => model.CategoryDescription): </span>@Html.DisplayFor(model => model.CategoryDescription)
    </div>

    <div style="color:red;">@ViewBag.ErrorMessage</div>


</fieldset>
@using (Html.BeginForm())
{
    <p>
        <input type="submit" value="Delete" />
        |
        @Html.ActionLink("Back to List", "Index")
    </p>
}
