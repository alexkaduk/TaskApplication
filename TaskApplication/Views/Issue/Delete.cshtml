@model TaskApplication.Models.Issue

@{
    ViewBag.Title = "Delete issue";
}

<h2>@ViewBag.Title</h2>

<h3>Are you sure you want to delete this?</h3>
<fieldset>
    <legend>Issue</legend>

    <div class="display-label">
         <span>@Html.DisplayNameFor(model => model.IssueName): </span>@Html.DisplayFor(model => model.IssueName)
    </div>

    <div class="display-label">
         <span>@Html.DisplayNameFor(model => model.IssueDescription): </span>@Html.DisplayFor(model => model.IssueDescription)
    </div>
   
    <div class="display-label">
         <span>@Html.DisplayNameFor(model => model.StatusId): </span>@Html.DisplayFor(model => model.Status.StatusName)
    </div>
    
    <div class="display-label">
         <span>@Html.DisplayNameFor(model => model.CategoryId): </span>@Html.DisplayFor(model => model.Category.CategoryName)
    </div>
    
    <div class="display-label">
         <span>@Html.DisplayNameFor(model => model.IssueCreateDate): </span>@Html.DisplayFor(model => model.IssueCreateDate)
    </div>
    
    <div class="display-label">
         <span>@Html.DisplayNameFor(model => model.IssueUpdateDate): </span>@Html.DisplayFor(model => model.IssueUpdateDate)
    </div>
    
</fieldset>
@using (Html.BeginForm()) {
    <p>
        <input type="submit" value="Delete" /> |
        @Html.ActionLink("Back to List", "Index")
    </p>
}
